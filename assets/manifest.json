{
  "manifest_version": 2,
  "name": "Meerkat - For a Transparent Market",
  "version": "__VERSION__",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.hasznaltauto.hu/*"],
      "js": ["toolbar.js", "sites/hasznaltauto.hu.js"]
    },
    {
      "matches": ["*://*.ingatlan.com/*"],
      "js": ["toolbar.js", "sites/ingatlan.com.js"]
    },
    {
      "matches": ["*://ingatlan.jofogas.hu/*"],
      "js": ["toolbar.js", "sites/ingatlan.jofogas.hu.js"]
    },
    {
      "matches": ["*://suchen.mobile.de/*"],
      "js": ["toolbar.js", "sites/mobile.de.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.16x16.png",
    "48": "icons/icon.48x48.png",
    "128": "icons/icon.128x128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.32x32.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "https://disqus.com/",
    "https://siloor.com/"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
